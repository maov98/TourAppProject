<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detailFragmentHeight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detaiFragmentTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/hello_blank_fragment"
            android:paddingTop="@dimen/extraPadding"
            android:paddingBottom="@dimen/normalPaddingValue"
            android:textSize="@dimen/detailFragmentTextSize"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/detailFragmentTextColor"
            android:layout_margin="@dimen/normalPaddingValue"/>

        <ImageView
            android:id="@+id/detailImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/reducedPadding"
            android:src="@drawable/copanhonduras3"
            android:scaleType="fitCenter"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:layout_margin="@dimen/normalPaddingValue"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailFragmentDescription"
            android:textColor="@color/detailFragmentTextColor"
            android:textStyle="italic">

        </TextView>

        <Button
            android:id="@+id/hideFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/xxpadding"
            android:text="Hide Detail"
            android:textColor="#000000"
            android:layout_margin="@dimen/normalPaddingValue"/>

    </LinearLayout>
</FrameLayout>





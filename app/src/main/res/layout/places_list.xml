<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/normalPaddingValue"
        android:paddingTop="@dimen/normalPaddingValue">

        <ImageView

            android:id="@+id/placesImage"
            style="@style/Fragment1ImageViewStyle"
            android:src="@drawable/copanhonduras3" />

        <TextView

            android:id="@+id/placesDescription"
            style="@style/Fragment1TextViewStyle"
            android:text="@string/placeDescription"
            android:background="@color/placesItemColor" />

        <TextView

            android:id="@+id/placesActionButton"
            style="@style/Fragment1ActionButtonStyle"
            android:drawableRight="@drawable/ic_swap_vert_black_24dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>